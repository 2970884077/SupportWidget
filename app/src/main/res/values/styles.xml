<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Base">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <style name="Base.Text" parent="Base">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:autoSizeMaxTextSize">20sp</item>
        <item name="android:autoSizeMinTextSize">6sp</item>
        <item name="android:autoSizeTextType">none</item>
    </style>

    <style name="SupportButton.Base" parent="Base.Text">
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:text">Button</item>
    </style>

    <style name="SupportButton.Common" parent="SupportButton.Base">
        <item name="widget_solid">@color/widget_primary</item>
    </style>

    <style name="SupportTextView.Base" parent="Base.Text">
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:text">TextView</item>
    </style>

    <style name="SupportTextView.Common" parent="SupportTextView.Base">
        <item name="widget_solid">@color/widget_primary</item>
    </style>

    <style name="SupportTextView.Stroke" parent="SupportTextView.Common">
        <item name="widget_solid">@color/widget_primary</item>
        <item name="widget_stroke_color">#00ffcc</item>
        <item name="widget_stroke_width">@dimen/common_stroke_width</item>
    </style>

    <style name="SupportTextView.Stroke.Radius" parent="SupportTextView.Stroke">
        <item name="widget_corners_radius">@dimen/common_radius</item>
    </style>

    <style name="SupportTextView.Inner" parent="SupportTextView.Base">
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="SupportTextView.Inner.LinearLayout" parent="SupportTextView.Inner">
        <item name="android:text">LinearLayout</item>
    </style>

    <style name="SupportTextView.Inner.Desc" parent="SupportTextView.Inner">
        <item name="android:text">Desc</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Base.Layout" parent="Base" />

    <style name="LinearLayout.Base" parent="Base.Layout">
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="LinearLayout.Common" parent="LinearLayout.Base">
        <item name="widget_solid">@color/widget_primary</item>
    </style>

    <style name="SupportCheckBox.Base" parent="Base.Text">
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:text">CheckBox</item>
    </style>

    <style name="SupportCheckBox.Common" parent="SupportCheckBox.Base">
        <item name="widget_checked_text_color">#f40</item>
        <item name="widget_corners_radius">@dimen/common_radius</item>
        <item name="widget_solid">#E4AA8A</item>
        <item name="widget_text_color">#ffffff</item>
    </style>

    <style name="RadioGroup.Base" parent="Base.Layout">
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RadioGroup.Common" parent="RadioGroup.Base">
        <item name="widget_solid">@color/widget_primary</item>
    </style>

    <style name="SupportRadioButton.Base" parent="Base.Text">
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:text">CheckBox</item>
    </style>

    <style name="SupportRadioButton.Common" parent="SupportRadioButton.Base">
        <item name="widget_checked_text_color">#f40</item>
        <item name="widget_corners_radius">@dimen/common_radius</item>
        <item name="widget_solid">#E4AA8A</item>
        <item name="widget_text_color">#ffffff</item>
    </style>

    <style name="SupportEditText.Base" parent="Base.Text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">EditText</item>
        <item name="android:textColor">#333333</item>
        <item name="widget_solid">#ffffff</item>
        <item name="widget_stroke_width">1dp</item>
        <item name="widget_stroke_color">#999999</item>
        <item name="widget_hint_text_color">#999999</item>
        <item name="widget_focused_stroke_color">@color/widget_primary</item>
        <item name="widget_focused_stroke_width">1dp</item>
        <item name="widget_focused_solid">#ffffff</item>
        <item name="widget_focused_hint_text_color">@color/widget_primary</item>
    </style>

    <style name="SupportEditText.Common" parent="SupportEditText.Base">
        <item name="widget_corners_radius">@dimen/common_radius</item>
        <item name="widget_focused_corners_radius">@dimen/common_radius</item>
    </style>

</resources>
